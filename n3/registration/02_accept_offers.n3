# Send an Accept when we get an offer

PREFIX me:   <{{{me}}}>
PREFIX ex:   <https://www.example.org/>
PREFIX as:   <https://www.w3.org/ns/activitystreams#>
PREFIX ldp:  <http://www.w3.org/ns/ldp#>
PREFIX rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX pol:  <https://www.example.org/ns/policy#>
PREFIX fno:  <https://w3id.org/function/ontology#>
PREFIX log:  <http://www.w3.org/2000/10/swap/log#>
PREFIX list: <http://www.w3.org/2000/10/swap/list#>

<{{{orchestrator.id}}}> a <{{{orchestrator.type}}}> .
<{{{orchestrator.id}}}> ldp:inbox <{{{orchestrator.inbox}}}> .

{
  [ ex:TopGraph ?id ] .
  ?id a ?class .
  ?class list:in (as:Offer) .

  ?id as:actor ?actor .
  ?id as:target ?target .

  # Forward messages from myself to the target
  ?actor log:notEqualTo me: .

  # Don't forward messages to myself
  ?target log:equalTo me: .
}
=>
{
  [ pol:policy [
      a fno:Execution ;
      fno:executes ex:sendInbox ;
      ex:notification [
            a as:Accept ;
            as:inReplyTo ?id ;
            as:actor     me: ;
            as:origin    <{{{orchestrator.id}}}> ;
            as:target    ?actor;
            as:object    ?id 
      ]
    ]
  ].
}.