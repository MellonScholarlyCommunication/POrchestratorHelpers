# Send an Accept when we get an offer

PREFIX me:   <{{{me}}}>
PREFIX ex:   <https://www.example.org/>
PREFIX as:   <https://www.w3.org/ns/activitystreams#>
PREFIX ldp:  <http://www.w3.org/ns/ldp#>
PREFIX rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX pol:  <https://www.example.org/ns/policy#>
PREFIX fno:  <https://w3id.org/function/ontology#>
PREFIX log:  <http://www.w3.org/2000/10/swap/log#>
PREFIX list: <http://www.w3.org/2000/10/swap/list#>

# Define the location of my own inbox
<{{{orchestrator.id}}}> a <{{{orchestrator.type}}}> .
<{{{orchestrator.id}}}> ldp:inbox <{{{orchestrator.inbox}}}> .

# Define the location of my known robustlinks implementation
<{{{robustlinks.id}}}> a <{{{robustlinks.type}}}> .
<{{{robustlinks.id}}}> ldp:inbox <{{{robustlinks.inbox}}}> .

{
  [ ex:TopGraph ?id ] .
  ?id a ?class .
  ?class list:in (as:Offer) .

  ?id as:actor ?actor .
  ?id as:target ?target .
  ?id as:object ?object .

  # I don't react to my own messages...
  ?actor log:notEqualTo me: .

  # The offer should be sent to myself...
  ?target log:equalTo me: .
}
=>
{
  # Send a notification to my own inbox, so that it can be picked up
  # by the forwarding rules and event log processing
  [ pol:policy [
      a fno:Execution ;
      fno:executes ex:sendOrigin ;
      ex:notification [
            a as:Accept ;
            as:inReplyTo ?id ;
            as:actor     me: ;
            as:origin    <{{{orchestrator.id}}}> ;
            as:target    ?actor;
            as:object    ?id 
      ]
    ]
  ].

  # Forward the notification to my robustlinks implementation
  # We just send it directly to the correct inbox
  [ pol:policy [
      a fno:Execution ;
      fno:executes ex:sendTarget ;
      ex:notification [
            a as:Offer ;
            as:inReplyTo ?id ;
            as:actor     me: ;
            as:origin    <{{{orchestrator.id}}}> ;
            as:target    <{{{robustlinks.id}}}> ;
            as:context   ?object ;
            as:object    ?id ;
            as:audience  ?actor        
      ]
    ]
  ].

}.